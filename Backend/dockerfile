# Backend/Dockerfile
FROM python:3.11-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential gcc libpq-dev \
    libjpeg62-turbo-dev zlib1g-dev libfreetype6 libfreetype6-dev \
    tzdata locales && rm -rf /var/lib/apt/lists/*

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    TZ=America/Bogota \
    PYTHONPATH=/app

WORKDIR /app

COPY /requirements-back.txt /app/requirements.txt
RUN pip install --upgrade pip && pip install -r /app/requirements.txt || true
RUN pip install "uvicorn[standard]" "fastapi" "sqlalchemy" "psycopg[binary]"

COPY Backend/ /app/Backend/
RUN [ -f /app/Backend/__init__.py ] || touch /app/Backend/__init__.py

COPY 3_y_4_Concepto_tecnico_y_sectorial_2025.xlsx /app/templates/3_y_4_Concepto_tecnico_y_sectorial_2025.xlsx

EXPOSE 8000

CMD ["uvicorn", "Backend.main:app", "--host", "0.0.0.0", "--port", "8000"]
